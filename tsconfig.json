{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./build",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  }
}
