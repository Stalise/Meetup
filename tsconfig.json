{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./src"]
}
